{
  "manifest_version": 2,

  "name": "Coursera Progress",
  "description": "Control Coursera progress.",
  "version": "1.2",
  "icons": {"48": "button_ok_48.png", "128": "button_ok_128.png"},

  "permissions": [
    "storage",
    "*://class.coursera.org/"
  ],

  "content_scripts": [
    {
      "matches": ["*://class.coursera.org/*"],
      "js": ["progress.js"]
    }
  ]

}
